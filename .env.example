# === Telegram Bot ===
BOT_TOKEN=123456789:ABCDEF_your_token_here

# === HH OAuth credentials ===
HH_CLIENT_ID=your_hh_client_id
HH_CLIENT_SECRET=your_hh_client_secret

# === Public domain of FastAPI (for oauth + webhooks) ===
PUBLIC_BASE_URL=https://your-domain.example.com

# === User-Agent required by hh.ru ===
